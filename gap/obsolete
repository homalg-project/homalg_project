                morphism_aids.(String(bidegrees_target[2])) := MonoOfLeftSummand( T );
                morphism_aids.(String(bidegrees_target[l])) := MonoOfLeftSummand( T );
            T!.MorphismAidMapsInObjectOfTotalComplex := morphism_aids;

