            if HasMorphismAidMap( gen_emb2 ) then
                if IsHomalgMap( monomorphism_aid_map ) then
                    monomorphism_aid_map := StackMaps( monomorphism_aid_map, MorphismAidMap( gen_emb2 ) );
                else
                    monomorphism_aid_map := MorphismAidMap( gen_emb2 );
                fi;
            fi;
           
